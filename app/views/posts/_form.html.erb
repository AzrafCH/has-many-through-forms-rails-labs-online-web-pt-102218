<%= form_for(@post) do |f| %>

<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :content %>
  <%= f.text_area :content %>
</p>

<% #How can i build a checkbox for each category %>
<% Category.each do |c| %>
<p>
<label for ="category_id_<%= c.id %>"><%= c.name %></label>
<input type = "checkbox" name = "post[category_ids]" value = "<%= c.id %>">

<%= f.submit %>
<% end %>
